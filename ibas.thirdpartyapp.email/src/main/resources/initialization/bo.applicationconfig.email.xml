<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE ApplicationConfig>
<ns:ApplicationConfig xmlns:ns="https://colorcoding.org/ibas/thirdpartyapp/bo">
	<Code>E_MAIL</Code>
	<Name>电子邮件</Name>
	<Group>MAIL</Group>
	<ApplicationConfigItems>
		<ApplicationConfigItem>
			<Name>mail.debug</Name>
			<Description>显示日志</Description>
			<Value>false</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.smtp.host</Name>
			<Description>SMTP服务器</Description>
			<Value></Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.smtp.port</Name>
			<Description>SMTP服务器的端口号</Description>
			<Value>465</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.smtp.ssl</Name>
			<Description>SMTP是否使用SSL</Description>
			<Value>true</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.store.protocol</Name>
			<Description>收件协议（pop3，imap）</Description>
			<Value>pop3</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.pop3.host</Name>
			<Description>POP3服务器</Description>
			<Value></Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.pop3.port</Name>
			<Description>POP3服务器的端口号</Description>
			<Value>995</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.pop3.ssl</Name>
			<Description>POP3是否使用SSL</Description>
			<Value>true</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.imap.host</Name>
			<Description>IMAP服务器</Description>
			<Value></Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.imap.port</Name>
			<Description>IMAP服务器的端口号</Description>
			<Value>993</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.imap.ssl</Name>
			<Description>IMAP是否使用SSL</Description>
			<Value>true</Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.user</Name>
			<Description>用户</Description>
			<ForUser>YES</ForUser>
			<Value></Value>
		</ApplicationConfigItem>
		<ApplicationConfigItem>
			<Name>mail.pass</Name>
			<Description>密码</Description>
			<Category>PASSWORD</Category>
			<ForUser>YES</ForUser>
			<Value></Value>
		</ApplicationConfigItem>
	</ApplicationConfigItems>
</ns:ApplicationConfig>